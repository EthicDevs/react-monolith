{
  "name": "@ethicdevs/typescript-library-starter",
  "version": "0.1.0",
  "description": "Template repository for TypeScript libraries",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "UNLICENSED",
  "author": {
    "name": "EthicDevs",
    "email": "contact@ethicdevs.com",
    "url": "https://ethicdevs.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ethicdevs/typescript-library-starter"
  },
  "keywords": [
    "typescript",
    "library",
    "template"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build:clean": "rm -rf ./dist",
    "build:ts": "tsc",
    "build": "run-s build:clean build:ts",
    "ci": "run-s test build",
    "dev": "nodemon -w .env -w .env.local -w . -x 'run-s typecheck start:dev'",
    "start": "NODE_ENV=production node ./dist/index.js",
    "start:dev": "NODE_ENV=development ts-node ./src/index.ts",
    "test": "jest --verbose",
    "test:watch": "jest --verbose --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "peerDependencies": {
    "tslib": ">=2.4.0"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn ci"
    }
  }
}
