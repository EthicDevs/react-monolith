{
  "name": "@ethicdevs/react-monolith",
  "version": "0.1.0",
  "description": "React SSR + CSI using the Islands pattern for the ultimate A11Y/SEO solution!",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "author": {
    "name": "EthicDevs",
    "email": "contact@ethicdevs.com",
    "url": "https://ethicdevs.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EthicDevs/react-monolith"
  },
  "keywords": [
    "react",
    "typescript",
    "mvc",
    "ssr",
    "csr",
    "monolith",
    "islands"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build:clean": "rm -rf ./dist",
    "build:ts": "tsc",
    "build": "date && run-s build:clean build:ts",
    "ci": "run-s test build",
    "dev": "nodemon -w .env -w .env.local -w . -x 'run-s typecheck start:dev'",
    "start": "NODE_ENV=production node ./dist/index.js",
    "start:dev": "NODE_ENV=development ts-node ./src/index.ts",
    "test": "jest --verbose",
    "test:watch": "jest --verbose --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "deepest-merge": "^1.0.0",
    "react-ssr-prepass": "^1.5.0"
  },
  "devDependencies": {
    "@ethicdevs/fastify-stream-react-views": "^0.8.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "fastify": "^3.27.4",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "peerDependencies": {
    "@ethicdevs/fastify-stream-react-views": ">=0.7.0",
    "fastify": ">=3.27.4",
    "tslib": ">=2.4.0",
    "react": ">=17.0.2",
    "react-dom": ">=17.0.2"
  },
  "optionalDependencies": {
    "styled-components": ">=5.3.5"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn ci"
    }
  }
}
